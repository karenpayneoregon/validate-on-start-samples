@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    .btn {
        display: flex;
        margin-top: 1.5em
    }
</style>
<div class="container">

    <div class="alert alert-primary shadow mt-2 mb-4" role="alert">
        <h1 class="fs-6 text-center">Reading list from settings</h1>
    </div>

    <form id="main" method="post">

        <div class="input-group">

            <label asp-for="SelectedItem">
                Items
                <select name="Name" id="settings"
                        asp-for="SelectedItem"
                        class="form-select"
                        style="width: 9.2em"
                        asp-items="Model.Options">
                </select>
            </label>

            <input type="submit"
                   value="View"
                   class="btn btn-primary" />
        </div>
        
        <div class="row mt-3">
            <label id="results"></label>
        </div>

    </form>
</div>

@section Scripts
{
    <script>
        let form = document.getElementById('main');
        let items = document.getElementById('settings');
        let label = document.getElementById('results');
        form.addEventListener("submit",
            (event) => {
                event.preventDefault();
                var index = items.selectedIndex;
                console.log(`Text ${items.options[index].text} Value ${items.options[index].value}`);
                label.innerHTML = `<strong>Text</strong> ${items.options[index].text} <strong>Value</strong> ${items.options[index].value}`;

            });
    </script>
}
